<odoo>


<record id="view_partner_property_form" model="ir.ui.view">
    <field name="name">invoice.import.partner.form</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="account.view_partner_property_form"/>
    <field name="arch" type="xml">
        <group name="accounting_entries" position="inside">
            <div name="invoice_import_configs">
                <button type="action" class="btn-link"
                    name="%(account_invoice_import_config_action)d"
                    context="{'search_default_partner_id': active_id, 'default_partner_id': active_id, 'default_name': name}">
                    <field name="invoice_import_count" string="Invoice Import Configurations" widget="statinfo"/>
                </button>
            </div>
        </group>
    </field>
</record>

</odoo>
