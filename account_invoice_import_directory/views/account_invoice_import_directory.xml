<odoo>
    <record model="ir.ui.view" id="account_invoice_import_directory_form">
        <field name="name">account.invoice.import.directory.form</field>
        <field name="model">account.invoice.import.directory</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Configuration">
                            <group>
                                <field name="company_id"/>
                                <field name="directory_path"/>
                            </group>
                            <group>
                                <field name="after_import" widget="selection"/>
                                <field name="backup_path"
                                       attrs="{'invisible': [('after_import','=', 'delete')], 'required': [('after_import','=', 'backup')]}"/>
                                <field name="attach_file_job"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="account_invoice_import_directory_tree">
        <field name="name">account.invoice.import.directory.tree</field>
        <field name="model">account.invoice.import.directory</field>
        <field name="arch" type="xml">
            <tree default_order="name">
                <field name="name"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window"
            id="account_invoice_import_directory_action">
        <field name="name">Import Directory Configuration</field>
        <field name="res_model">account.invoice.import.directory</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="account_invoice_import_directory_config_menu"
        parent="account_invoice_import.account_invoice_import_config_root"
        action="account_invoice_import_directory_action" sequence="10"/>

</odoo>