<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="invoice2data_template_view_tree" model="ir.ui.view">
            <field name="model">invoice2data.template</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="template_type" />
                </tree>
            </field>
        </record>
        <record id="invoice2data_template_view_search" model="ir.ui.view">
            <field name="model">invoice2data.template</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="template_type" />
                    <field name="template" />
                </search>
            </field>
        </record>
        <record id="invoice2data_template_view_form" model="ir.ui.view">
            <field name="model">invoice2data.template</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="main" col="4">
                            <field name="name" />
                            <field name="template_type" />
                        </group>
                        <field name="template" />
                        <group name="preview_buttons" col="4">
                            <field name="preview_file" placeholder="Upload file for preview" />
                            <button type="object" name="action_preview" string="Preview" class="oe_highlight" />
                            <button type="object" name="action_test" string="Test" class="oe_highlight" />
                        </group>
                        <field name="preview" attrs="{'invisible': [('preview', '=', False)]}" />
                        <field name="preview_text" attrs="{'invisible': [('preview', '=', False)]}" style="width:50%" />
                        <field name="test_results" attrs="{'invisible': [('test_results', '=', False)]}" style="width:50%" />
                    </sheet>
                </form>
            </field>
        </record>
        <act_window
            id="action_invoice2data_template"
            name="Invoice2data templates"
            res_model="invoice2data.template"
            view_mode="tree,form"
        />
        <menuitem
            id="menu_invoice2data_template"
            parent="account.menu_finance_configuration"
            action="action_invoice2data_template"
            sequence="60"
        />
    </data>
</openerp>
