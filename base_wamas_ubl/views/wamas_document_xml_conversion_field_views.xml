<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="wamas_document_xml_conversion_field_view_tree" model="ir.ui.view">
        <field name="name">wamas.document.xml.conversion.field.view.tree</field>
        <field name="model">wamas.document.xml.conversion.field</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="namespace" />
                <field name="name" />
                <field name="ttype" />
                <field name="parent_id" optional="show" />
                <field name="element_id" optional="show" />
                <field name="field_id" optional="show" />
                <field name="df_field_line_id" optional="show" />
                <field name="default_server_action_id" optional="show" />
                <field name="default_value" optional="show" />
                <field name="default_func" optional="show" />
                <field name="is_freq_element" optional="hide" />
                <field name="freq_element_id" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="wamas_document_xml_conversion_field_view_form" model="ir.ui.view">
        <field name="name">wamas.document.xml.conversion.field.view.form</field>
        <field name="model">wamas.document.xml.conversion.field</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="General Information">
                        <group>
                            <field name="name" />
                            <field name="namespace" />
                            <field name="len_field" />
                            <field name="template_id" invisible="1" />
                        </group>
                        <group>
                            <field name="ttype" />
                            <field name="sequence" />
                            <field
                                name="parent_id"
                                domain="[('template_id', '=', template_id), ('namespace', '=', 'cac')]"
                            />
                        </group>
                    </group>
                    <group string="Mapping Information">
                        <group>
                            <field
                                name="element_id"
                                domain="[('id', 'in', context.get('from_wamas_element_ids'))]"
                            />
                            <field
                                name="field_id"
                                domain="[('element_id', '=', element_id)]"
                            />
                            <field name="df_field_template_id" invisible="1" />
                            <field
                                name="df_field_line_id"
                                domain="[('template_id', '=', df_field_template_id)]"
                            />
                        </group>
                        <group>
                            <field name="is_freq_element" />
                            <field name="freq_element_id" />
                        </group>
                        <group colspan="2">
                            <field name="default_server_action_id" />
                            <field name="default_value" />
                            <field name="default_func" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
