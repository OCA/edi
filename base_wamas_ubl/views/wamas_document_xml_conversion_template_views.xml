<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="wamas_document_xml_conversion_template_view_tree" model="ir.ui.view">
        <field name="name">wamas.document.xml.conversion.template.view.tree</field>
        <field name="model">wamas.document.xml.conversion.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="code" />
                <field name="ttype" />
                <field name="from_wamas_document_template_id" />
                <field name="to_wamas_document_template_id" />
            </tree>
        </field>
    </record>

    <record id="wamas_document_xml_conversion_template_view_form" model="ir.ui.view">
        <field name="name">wamas.document.xml.conversion.template.view.form</field>
        <field name="model">wamas.document.xml.conversion.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="General Information">
                            <field name="name" />
                            <field name="code" />
                        </group>
                        <group string="Conversion Information">
                            <field name="ttype" />
                            <field
                                name="from_wamas_document_template_id"
                                attrs="{'invisible': [('ttype', '!=', 'to_xml')], 'required': [('ttype', '=', 'to_xml')]}"
                            />
                            <field
                                name="to_wamas_document_template_id"
                                attrs="{'invisible': [('ttype', '!=', 'from_xml')], 'required': [('ttype', '=', 'from_xml')]}"
                            />
                        </group>
                    </group>
                    <group
                        string="UBL → WAMAS Document"
                        attrs="{'invisible': [('ttype', '!=', 'from_xml')]}"
                    >
                        <group>
                            <field name="ubl_xml_root_name" />
                        </group>
                    </group>
                    <group
                        string="WAMAS Document → UBL"
                        attrs="{'invisible': [('ttype', '!=', 'to_xml')]}"
                    >
                        <group>
                            <field name="ubl_document_name" />
                            <field name="ubl_xml_root_name" />
                        </group>
                        <group>
                            <field name="ubl_version" />
                            <field name="ubl_lang" />
                        </group>
                        <group string="Mapping Fields to XML" col="4" colspan="2">
                            <field name="from_wamas_element_ids" invisible="1" />
                            <field
                                name="mapping_field_ids"
                                nolabel="1"
                                colspan="4"
                                context="{'from_wamas_element_ids': from_wamas_element_ids, 'default_template_id': id, 'tree_view_ref':'base_wamas_ubl.wamas_document_xml_conversion_field_view_tree', 'form_view_ref':'base_wamas_ubl.wamas_document_xml_conversion_field_view_form'}"
                            />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="wamas_document_xml_conversion_template_view_search" model="ir.ui.view">
        <field name="name">wamas.document.xml.conversion.template.view.search</field>
        <field name="model">wamas.document.xml.conversion.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="code" />
                <field name="ttype" />
                <field name="from_wamas_document_template_id" />
                <field name="to_wamas_document_template_id" />
                <separator />
                <group expand="1" string="Group By">
                    <filter
                        name="gb_ttype"
                        string="Type"
                        context="{'group_by':'ttype'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record
        id="action_wamas_document_xml_conversion_template"
        model="ir.actions.act_window"
    >
        <field name="name">WAMAS Document XML Conversion Template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wamas.document.xml.conversion.template</field>
        <field name="view_mode">tree,form</field>
        <field
            name="search_view_id"
            ref="wamas_document_xml_conversion_template_view_search"
        />
        <field name="context">{}</field>
    </record>

</odoo>
