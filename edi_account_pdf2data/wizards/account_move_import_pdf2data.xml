<odoo>

    <record model="ir.ui.view" id="account_move_import_pdf2data_form_view">
        <field
            name="name"
        >account.move.import.pdf2data.form (in edi_account_pdf2data)</field>
        <field name="model">account.move.import.pdf2data</field>
        <field name="arch" type="xml">
            <form string="Account Move Import Pdf2data">
                <group>
                    <field name="file" string="File" filename="filename" />
                        <field
                        name="filename"
                        invisible="1"
                        class="oe_inline oe_right"
                    />
                </group>
                <footer>
                    <button
                        name="import_file"
                        string="OK"
                        class="btn-primary"
                        type="object"
                    />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="account_move_import_pdf2data_act_window">
        <field name="name">Account Move Import Pdf2data</field>
        <field name="res_model">account.move.import.pdf2data</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>


    <record model="ir.ui.menu" id="account_move_import_pdf2data_menu">
        <field name="name">Import Pdf2data</field>
        <field name="parent_id" ref="account.menu_finance_payables" />
        <field name="action" ref="account_move_import_pdf2data_act_window" />
        <field name="sequence" eval="16" />
    </record>
</odoo>
