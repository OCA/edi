<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="edi_exchange_consumer_mixin_buttons">
        <div
            t-att-groups="group"
            class="alert alert-warning"
            role="alert"
            style="margin-bottom:0px;"
            attrs="{'invisible': [('edi_has_form_config', '=', False)]}"
        >
            <div>
                <i class="fa fa-retweet" />This record has EDI exchanges to handle
                <field name="edi_config" widget="edi_configuration" />
                <field name="edi_has_form_config" invisible="1" />
            </div>
        </div>
    </template>
</odoo>
