<odoo>
  <!--FORM view-->
  <record model="ir.ui.view" id="punchout_backend_form_view">
    <field name="model">punchout.backend</field>
    <field name="arch" type="xml">
      <form>
        <header>
            <button
                        name="redirect_to_backend"
                        type="object"
                        icon="fa-sign-in"
                        string="Access"
                    />
            <field name="state" widget="statusbar" clickable="1" />
        </header>
        <sheet>
          <div name="button_box" class="oe_button_box" />
          <div class="oe_title">
            <label for="name" string="PunchOut Backend" class="oe_read_only" />
            <label for="name" class="oe_edit_only" />
            <h1 class="oe_title">
              <field name="name" />
            </h1>
          </div>
          <group name="group_main">
              <group>
                <field name="description" />
                <field name="url" />
                <field name="from_domain" placeholder="Networkid" />
                <field name="from_identity" />
                <field name="to_domain" placeholder="Networkid" />
                <field name="to_identity" />
              </group>
              <group>
                <field name="shared_secret" />
                <field name="user_agent" />
                <field name="deployment_mode" />
                <field name="browser_form_post_url" />
              </group>
          </group>
            <group name="group_second">
                <group>
                    <field name="dtd_file" filename="dtd_filename" />
                    <field name="dtd_filename" invisible="1" />
                    <field name="dtd_version" />
                    <field name="session_duration" invisible="1" />
                </group>
                <group />
            </group>
        </sheet>
      </form>
    </field>
  </record>
  <!--TREE view-->
  <record model="ir.ui.view" id="punchout_backend_tree_view">
    <field name="model">punchout.backend</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="description" />
        <field name="url" />
        <field name="from_domain" />
        <field name="from_identity" />
        <field name="to_domain" />
        <field name="to_identity" />
        <field name="user_agent" />
        <field name="deployment_mode" />
      </tree>
    </field>
  </record>
  <!--SEARCH view-->
  <record model="ir.ui.view" id="punchout_backend_search_view">
    <field name="model">punchout.backend</field>
    <field name="arch" type="xml">
      <search>
        <field name="name" />
        <field name="url" />
        <field name="user_agent" />
        <group string="Group By" name="groupby">
          <filter
                        name="group_by_deployment_mode"
                        string="Deployment mode"
                        context="{'group_by': 'deployment_mode'}"
                    />
        </group>
      </search>
    </field>
  </record>
  <record model="ir.ui.view" id="punchout_backend_kanban_view">
    <field name="model">punchout.backend</field>
    <field name="arch" type="xml">
      <kanban>
        <field name="name" />
        <field name="description" />
        <templates>
          <t t-name="kanban-box">
            <div class="oe_kanban_vignette" style="padding: 5px 5px 5px 5px;">
                <h2>
                    <field name="description" />
                </h2>
              <div class="oe_kanban_details">

              </div>
                <div class="o_kanban_record_bottom">
                  <div class="oe_kanban_bottom_left">

                    </div>
                  <div class="oe_kanban_bottom_right">
                        <button
                                        name="redirect_to_backend"
                                        type="object"
                                        class="btn btn-primary"
                                    >
                            <i class="fa fa-sign-in" /> Access
                        </button>
                    </div>
                </div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>
  <!--ACTION-->
  <record model="ir.actions.act_window" id="punchout_backend_act_window">
    <field name="name">Punchout Backends</field>
    <field name="res_model">punchout.backend</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[]</field>
    <field name="context">{}</field>
  </record>
  <!--MENUS-->
  <record model="ir.ui.menu" id="punchout_menu">
    <field name="name">PunchOut</field>
    <field name="parent_id" ref="base.menu_custom" />
    <field name="sequence" eval="150" />
  </record>
  <record model="ir.ui.menu" id="punchout_backend_menu">
    <field name="name">PunchOut Backends</field>
    <field name="parent_id" ref="punchout.punchout_menu" />
    <field name="action" ref="punchout.punchout_backend_act_window" />
    <field name="sequence" eval="10" />
  </record>
</odoo>
