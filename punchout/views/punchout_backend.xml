<odoo>
  <!--FORM view-->
  <record model="ir.ui.view" id="punchout_backend_form_view">
    <field name="model">punchout.backend</field>
    <field name="arch" type="xml">
      <form>
        <header>
            <button
                        name="redirect_to_backend"
                        type="object"
                        icon="fa-sign-in"
                        string="Access"
                    />
        </header>
        <sheet>
          <div name="button_box" class="oe_button_box" />
          <div class="oe_title">
            <label for="name" string="PunchOut Backend" class="oe_read_only" />
            <label for="name" class="oe_edit_only" />
            <h1 class="oe_title">
              <field name="name" />
            </h1>
          </div>
          <group name="group_main" col="4">
            <field name="url" />
            <newline />
            <field name="from_domain" placeholder="Networkid" />
            <field name="from_identity" />
            <field name="to_domain" placeholder="Networkid" />
            <field name="to_identity" />
            <field name="shared_secret" />
            <field name="user_agent" />
            <field name="deployment_mode" />
            <field name="browser_form_post_url" />
            <field name="buyer_cookie_encryption_key" />
          </group>
        </sheet>
        <div class="oe_chatter" />
      </form>
    </field>
  </record>
  <!--TREE view-->
  <record model="ir.ui.view" id="punchout_backend_tree_view">
    <field name="model">punchout.backend</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="url" />
        <field name="from_domain" />
        <field name="from_identity" />
        <field name="to_domain" />
        <field name="to_identity" />
        <field name="user_agent" />
        <field name="deployment_mode" />
      </tree>
    </field>
  </record>
  <!--SEARCH view-->
  <record model="ir.ui.view" id="punchout_backend_search_view">
    <field name="model">punchout.backend</field>
    <field name="arch" type="xml">
      <search>
        <field name="name" />
        <field name="url" />
        <field name="user_agent" />
        <group string="Group By" name="groupby">
          <filter
                        name="group_by_deployment_mode"
                        string="Deployment mode"
                        context="{'group_by': 'deployment_mode'}"
                    />
        </group>
      </search>
    </field>
  </record>
  <!--ACTION-->
  <record model="ir.actions.act_window" id="punchout_backend_act_window">
    <field name="name">Punchout Backends</field>
    <field name="res_model">punchout.backend</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[]</field>
    <field name="context">{}</field>
  </record>
  <!--MENUS-->
  <record model="ir.ui.menu" id="punchout_menu">
    <field name="name">PunchOut</field>
    <field name="parent_id" ref="base.menu_custom" />
    <field name="sequence" eval="150" />
  </record>
  <record model="ir.ui.menu" id="punchout_backend_menu">
    <field name="name">PunchOut Backends</field>
    <field name="parent_id" ref="punchout.punchout_menu" />
    <field name="action" ref="punchout.punchout_backend_act_window" />
    <field name="sequence" eval="10" />
  </record>
</odoo>
