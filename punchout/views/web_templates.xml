<odoo>
    <template id="punchout_web_request_received" name="Request Received">
        <t t-call="web.frontend_layout">
            <t t-set="html_data" t-value="{'style': 'height: 100%;'}" />
            <t t-set="body_classname" t-value="'bg-100'" />

            <div class="container py-5">
                <div class="alert alert-info">
                    The response has been received and will be processed.
                    <br /><br />
                    You can close this page or click <a
                        href="/web"
                    >here</a> to be redirected to Odoo.
                </div>
            </div>
        </t>
    </template>
    <template id="punchout_web_request_not_found" name="Request not found">
        <t t-call="web.frontend_layout">
            <t t-set="html_data" t-value="{'style': 'height: 100%;'}" />
            <t t-set="body_classname" t-value="'bg-100'" />

            <div class="container py-5">
                <div class="alert alert-danger">
                    The response can't be associated to an existing request.
                    Please contact an administrator if this error persists.
                    <br /><br />
                    You can close this page or click <a
                        href="/web"
                    >here</a> to be redirected to Odoo.
                </div>
            </div>
        </t>
    </template>
</odoo>
