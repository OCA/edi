<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="template_skip_error_lines_message">
        <h4 class="text-danger">Errors lines on Import: <t
                t-out="len(lines)"
            /> line(s)</h4>
        <t t-foreach="lines" t-as="line" t-key="line_index">
            <div class="error-line-message">
                <span>
                    <strong>Error Message <t t-out="line_index + 1" /> :</strong>
                    <span t-out="line['error_msg']" />
                </span>
                <br />
                <span>
                    <strong>Values <t t-out="line_index + 1" /> :</strong>
                    <t t-set="values" t-value="line['values']" />
                    <t
                        t-call="sale_order_import.template_skip_error_line_value_message"
                    />
                </span>
            </div>
        </t>
    </template>

    <template id="template_skip_error_line_value_message">
        <ul>
            <t t-foreach="values" t-as="key">
                <li>
                    <i><t t-out="key" />: </i>
                    <t t-if="values[key] and isinstance(values[key], dict)">
                        <t
                            t-call="sale_order_import.template_skip_error_line_value_message"
                        >
                            <t t-set="values" t-value="values[key]" />
                        </t>
                    </t>
                    <t t-else="" t-out="values[key] or 'None'" />
                </li>
            </t>
        </ul>
    </template>
</odoo>
